<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mapZoomIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shade_zoom_in"
        android:src="@drawable/map_zoom_in" />

    <ImageView
        android:id="@+id/iv_mapZoomOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shade_zoom_out"
        android:src="@drawable/map_zoom_out" />

</LinearLayout> 