<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mapType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_change_mode"
            android:src="@drawable/map_mode" />

        <ImageView
            android:id="@+id/iv_mapTraffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:background="@drawable/bg_change_mode"
            android:src="@drawable/map_traffic" />

        <ImageView
            android:id="@+id/iv_clearRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_change_mode"
            android:src="@drawable/map_clear" />

    </LinearLayout>
</layout>

